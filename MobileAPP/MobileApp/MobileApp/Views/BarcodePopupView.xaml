<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MobileApp.ViewModels"
             x:Class="MobileApp.Views.BarcodePopupView"
             Shell.PresentationMode="ModalAnimated"
             Title="{Binding Title}">

    <StackLayout Padding="10">
        
        <SearchBar IsVisible="True" Text="{Binding SearchInput}"
                   Placeholder="Search items..." SearchCommand="{Binding StartSearchCommand}" />

        <CollectionView ItemsSource="{Binding SearchResults}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto">
                        <Image Source="{Binding IconPath}" WidthRequest="40" HeightRequest="40" Grid.Column="0" />
                        <Label Text="{Binding Name}" Grid.Column="1" VerticalOptions="Center" />
                        <Label Text="{Binding Price, StringFormat='{0:C}'}" Grid.Column="2" VerticalOptions="Center"
                               HorizontalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>